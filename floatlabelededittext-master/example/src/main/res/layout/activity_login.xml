<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbd1bb"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/linear1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnemailogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/emaillogin_selector" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/linear2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnweixinlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/weixinlogin_selector" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/linear3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnweibologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/weibologin_selector" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/linear4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3"
        android:layout_marginTop="60dp"
        android:gravity="center">

        <TextView
            android:id="@+id/otherlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="其他方式登录"
            android:textColor="#e6790c" />


    </RelativeLayout>


</RelativeLayout>
